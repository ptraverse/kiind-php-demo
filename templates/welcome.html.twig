{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

<div class="center">
<img src="/css/qptransplarge.png" style="max-width: 175px; margin-top: 80px;" />

<form class="form-horizontal" action="/login" method="POST">
<fieldset>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="email"></label>
  <div class="controls">
    <input id="email" name="email" placeholder="Email" class="input-xlarge" type="text">
    
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="password"></label>
  <div class="controls">
    <input id="password" name="password" placeholder="Password" class="input-xlarge" type="password">
    
  </div>
</div>

<!-- Button -->
<div class="control-group">
  <label class="control-label" for="login"></label>
  <div class="controls">
    <button id="login" name="login" class="btn btn-black">Log In</button>
  </div>
</div>

<!-- Button -->
<div class="control-group">
  <label class="control-label" for="help"></label>
  <div class="controls">
    <!-- <button id="help" name="help" class="btn btn-default btn-round">?</button> -->
    <a href="/help"><i class="fa fa-question-circle fa-2x"></i></a>
  </div>
</div>

</fieldset>
</form>
</div>
{% endblock %}