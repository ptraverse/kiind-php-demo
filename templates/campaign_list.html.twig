{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
	{{ parent() }}
{% endblock %}

{% block content %}
<div class="main center">
	<h3>Campaigns</h3>	
	<h4><a href="/campaign/create"><i class="fa fa-plus-square-o"></i> Create New Campaign</a></h4>	
	<table class="center" align="center" border="1">
		<tr>
			<th class="center">Short Name</th>
			<th class="center">Long Url</th>
			<th class="center">Gift Card</th>
			<th class="center">Gift Amount</th>
			<th class="center">Target Number of Clicks</th>
			<th class="center">My Link</th>
		</tr>
	{% for c in campaigns %}		
		<tr>
			<td>{{ c.short_name }}</td>
			<td>{{ c.long_url }}</td>
			<td>{{ c.gift_card_name }}</td>
			<td>${{ c.gift_amount|number_format(2) }}</td>
			<td>{{ c.clicks }}</td>
			{% if c.link %}
				<td><a href="/{{ c.link }}">My Link</a></td>
			{% else %}
				<td><a href="/link/create/{{ c.id }}">Get Link</a></td>
			{% endif %}
		</tr>
	{% else %}
		<tr>
			<td>No campaigns found</td>
		</tr>		
	{% endfor %}
	</table>
</div>
{% endblock %}